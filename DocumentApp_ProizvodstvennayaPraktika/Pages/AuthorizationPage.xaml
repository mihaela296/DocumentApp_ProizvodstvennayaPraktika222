<Page x:Class="DocumentApp_ProizvodstvennayaPraktika.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DocumentApp_ProizvodstvennayaPraktika.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage"
      Style="{StaticResource PageStyle}"
      >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label Content="Логин" Style="{StaticResource LabelStyle}" />
            <TextBox x:Name="TbUsername" Style="{StaticResource TextBoxStyle}" />
            <Label Content="Пароль" Style="{StaticResource LabelStyle}" />
            <PasswordBox x:Name="PbPassword" Style="{StaticResource PasswordBoxStyle}" />
            <Button x:Name="btnLogin" Content="Войти" Style="{StaticResource ButtonStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Click="btnLogin_Click" />

            <TextBlock Style="{StaticResource LinkTextBlockStyle}">
                Нет аккаунта? 
                <Hyperlink Style="{StaticResource HyperlinkStyle}" TextDecorations="Underline" Click="Hyperlink_Click" >
                    Зарегистрируйтесь
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Page>
